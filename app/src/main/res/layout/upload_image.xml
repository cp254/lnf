<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="io.ginius.cp.kt.lostfound.kotlin.Register">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:padding="0dp"
        app:theme="@style/ToolbarStyle"
        style="@style/AlertDialog.AppCompat.Light"
        android:background="@color/skyblue"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <ImageView
                android:id="@+id/tool_bar_button"
                android:layout_width="180dp"
                android:background="@drawable/ic_logo_white"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:paddingLeft="12dp"
                android:visibility="gone"
                android:paddingRight="16dp"
                android:scaleType="center" />


            <TextView
                android:id="@+id/toolbar_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_extrabold"
                android:textColor="@color/colorWhite"
                android:textSize="22dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Found document"/>


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:background="#e7e7e7"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add an image of the document"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone">


            <EditText
                android:id="@+id/et_fname"
                android:hint="first name"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/rounded_corners_white_background"
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                />

            <EditText
                android:id="@+id/et_lnames"
                android:hint="last name"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/rounded_corners_white_background"
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:padding="8dp"/>

        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_doc_type"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/rounded_corners_white_background"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>


        <EditText
            android:id="@+id/et_doc_id"
            android:hint="document id"
            android:visibility="gone"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/rounded_corners_white_background"
            android:inputType="number"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>



        <ImageView
            android:id="@+id/preview"
            android:hint="comments"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/rounded_corners_white_background"
            android:inputType="number"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_upload"
            android:drawableLeft="@drawable/ic_white"
            android:text="upload document image"
            android:background="@drawable/rounded_corners_blue_bg"
            android:textAllCaps="false"
            android:paddingLeft="64dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_extrabold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_reset"
                android:text="Reset"
                android:visibility="gone"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_next"
                android:text="Finish"
                android:background="@drawable/rounded_corners_blue_bg"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_extrabold"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>