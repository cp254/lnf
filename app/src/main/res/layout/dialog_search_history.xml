<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:corner_radius="24dp"
    android:padding="22dp"
    android:background="#e7e7e7"
    tools:context="io.ginius.cp.kt.lostfound.kotlin.Register">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/c"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="16dp"
                android:text="Search history"
                android:textSize="25dp" />





            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:background="#e7e7e7"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:dividerHeight="16dp"
                android:divider="#e7e7e7"/>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/ll_main_layout">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_corners_blue_bg"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>




</com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>