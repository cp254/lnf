<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.ginius.cp.kt.lostfound.kotlin.Register">
    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:background="#e7e7e7"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Enter your details"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">


            <EditText
                android:id="@+id/et_fname"
                android:hint="name(s)"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/rounded_corners_white_background"
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:padding="8dp"
                />

            <EditText
                android:id="@+id/et_lnames"
                android:hint="last name"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/rounded_corners_white_background"
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:padding="8dp"/>

        </LinearLayout>





        <EditText
            android:id="@+id/et_contact"
            android:hint="07XXXXXXXX"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/rounded_corners_white_background"
            android:inputType="number"
            android:textAlignment="center"
            android:digits="1234567890"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>



        <EditText
            android:id="@+id/et_doc_details"
            android:hint="comments"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/rounded_corners_white_background"
            android:inputType="number"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_reset"
                android:text="Reset"
                android:visibility="gone"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_next"
                android:text="Next"
                android:background="@drawable/rounded_corners_blue_bg"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_extrabold"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>