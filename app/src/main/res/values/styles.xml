<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="AppTheme.SkyBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skyblue</item>
        <item name="colorPrimaryDark">@color/skybluedark</item>
        <item name="colorAccent">@color/passport</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>

    </style>

    <style name="AppTheme.Orange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/id_card</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/skyblue</item>
        <item name="colorPrimaryDark">@color/skybluedark</item>
        <item name="colorAccent">@color/passport</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WelcomeSlider" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MySpinnerLook"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/text_color_bold</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>






</resources>
