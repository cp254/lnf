<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.ginius.cp.kt.lostfound">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.SkyBlue">
        <activity android:name=".WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WelcomeSlider">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SkyBlue">
        </activity>
        <activity android:name=".CreateDocsOne"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SkyBlue">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.ginius.cp.kt.lostfound.MainActivity" />
        </activity>
        <activity android:name=".CreateDocsTwo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SkyBlue">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.ginius.cp.kt.lostfound.CreateDocsOne" />
        </activity>
        <activity android:name=".CreateDocsThree"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SkyBlue">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.ginius.cp.kt.lostfound.CreateDocsTwo" />
        </activity>
        <activity android:name=".DocUpload"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SkyBlue">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.ginius.cp.kt.lostfound.CreateDocsTwo" />
        </activity>

        <service
            android:name=".FetchAddressIntentService"
            android:exported="false"/>

    </application>

</manifest>